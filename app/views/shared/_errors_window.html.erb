<% if flash[:error].present? %>
  <div class="mt-5 alert alert-danger alert-dismissible fade show text-center position-fixed start-50 translate-middle-x" role="alert" style="top: 100px; z-index: 9999; max-width: 400px;">
    <% if flash[:error].is_a?(String) %>
      <%= flash[:error] %>
    <% elsif flash[:error].is_a?(Array) %>
      <% flash[:error].each do |error| %>
        <%= error %><br>
      <% end %>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>