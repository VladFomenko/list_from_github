<div class="container py-3" style="height: calc(100vh - 10rem);">
  <ul class="list-group list-group-light" id="repositoriesList">
    <li class="list-group-item"><%= @user_data[:name] %></li>
    <% @user_data[:repo].each do |repo| %>
      <li class="list-group-item">- <%= repo %></li>
    <% end %>
  </ul>

  <nav aria-label="Page navigation example" style="position: absolute; bottom: 10px;">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="<%= url_for(controller: 'git_hub', action: 'show', login: @login, start_cursor: @start_cursor) %>">Start page</a>
      </li>
      <% if @has_next_page %>
        <li class="page-item">
          <a class="page-link" href="<%= url_for(controller: 'git_hub', action: 'show', login: @login, has_next_page: @has_next_page, end_cursor: @end_cursor) %>">Next page</a>
      </li>
        <% end %>
    </ul>
  </nav>

</div>
